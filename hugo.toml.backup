# Base Configuration
baseURL = "https://jungjihyuk.github.io/"
title = "ì§€í˜'s Blog"
languageCode = "ko-kr"
defaultContentLanguage = "ko"
theme = "stack"

# Hugo settings
enableRobotsTXT = true
enableGitInfo = false
enableEmoji = true

# Pagination (updated for Hugo v0.128.0+)
[pagination]
  pagerSize = 10
  path = "page"

# Permalinks - Match Hexo structure exactly
[permalinks]
  posts = "/:year/:month/:day/:title/"

# Taxonomy
[taxonomies]
  tag = "tags"
  category = "categories"

# Output formats
[outputs]
  home = ["HTML", "RSS", "JSON"]
  section = ["HTML", "RSS"]

# RSS Configuration
[outputFormats.RSS]
  mediaType = "application/rss+xml"
  baseName = "feed"  # Creates feed.xml instead of index.xml

